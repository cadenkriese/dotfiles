# Fig pre block. Keep at the top of this file.
[[ -f "$HOME/.fig/shell/zshrc.pre.zsh" ]] && builtin source "$HOME/.fig/shell/zshrc.pre.zsh"

# Path
export PATH="/opt/homebrew/bin:$PATH"
export PATH="/opt/homebrew/sbin:$PATH"
export PATH="/opt/homebrew/opt/ruby/bin:$PATH"
export PATH="/opt/homebrew/lib/ruby/gems/3.2.0/bin:$PATH"
export PATH="/opt/homebrew/opt/python@3.11/libexec/bin:$PATH"
export PATH="$HOME/Library/flutter/bin:$PATH"
export PATH="$HOME/.pub-cache/bin:$PATH"

export ANDROID_SDK_ROOT="/opt/homebrew/share/android-commandlinetools"
if [ -d $ANDROID_SDK_ROOT ]
then
  PATH="$ANDROID_SDK_ROOT/cmdline-tools/latest/bin:$ANDROID_SDK_ROOT/emulator:$ANDROID_SDK_ROOT/platform-tools:$PATH"
fi

export ZSH_COMPDUMP=$HOME/cache/.zcompdump-$HOST
export EDITOR="cot -w"

# Aliases
alias cat="bat"
alias ls="exa --color=auto"
alias md="open /Applications/Markdown\ Editor.app/"
# The cdf alias requires single quotes to execute the $()
# whenever the alias is run instead of when it's defined.
# The sequences of '\'' are to insert a literal '
alias cdf='cd "$(osascript \
	-e '\''tell application "Finder"'\'' \
	-e '\''return POSIX path of (insertion location as alias)'\'' \
	-e '\''end tell'\'')"'

# History cleaning
setopt HIST_IGNORE_SPACE

# ZSH Syntax highlighting
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

eval "$(starship init zsh)"

# Fig post block. Keep at the bottom of this file.
[[ -f "$HOME/.fig/shell/zshrc.post.zsh" ]] && builtin source "$HOME/.fig/shell/zshrc.post.zsh"
